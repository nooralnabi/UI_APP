.panel.panel-default
  .panel-heading
    %h2 profiles
  .panel-body
    %table#profiles
      %thead
        %tr
          %th Name
          %th status
          %th Gender
          %th Website
          %th Person
          %th
          %th
          %th

      %tbody
        - @profiles.each do |profile|
          %tr
            %td= profile.name
            %td=profile.status      
            %td= profile.gender
            %td= profile.website
            %td= profile.person_id
            %td= link_to 'Show', profile
            %td= link_to 'Edit', edit_profile_path(profile)
            %td= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' }

    %br

    = link_to 'New Profile', new_profile_path
