= form_for @person do |f|
  .row
    .col-sm-8
      .card
        .card-body
          .form-group.row
          - if @person.errors.any?
            #error_explanation
              %h2= "#{pluralize(@person.errors.count, "error")} prohibited this person from being saved:"
              %ul
                - @person.errors.full_messages.each do |message|
                  %li= message

          .field
            = f.label :name
            = f.text_field :name, class: 'form-control', placeholder: 'Name'
          .field
            = f.label :email
            = f.text_field :email, class: 'form-control', placeholder: 'Email'
          .field
            = f.label :phone_number
            = f.text_field :phone_number, class: 'form-control', placeholder: 'Phone number'
          .field
            = f.label :date_of_brith
            = f.date_field :date_of_brith, class:'custom-select'
            %br/
        .pricing-header.text-center
          .actions
            = f.submit 'create person',class: "btn btn-outline-secondary"
